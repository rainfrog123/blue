//@version=6
indicator("EMA Cross", overlay=true)

fast = input.int(5, "Fast")
slow = input.int(20, "Slow")

emaFast = ta.ema(close, fast)
emaSlow = ta.ema(close, slow)

plot(emaFast, "Fast", color.blue)
plot(emaSlow, "Slow", color.red)

plotshape(ta.crossover(emaFast, emaSlow), location=location.belowbar, color=color.green, style=shape.triangleup, size=size.small, title="Long")
plotshape(ta.crossunder(emaFast, emaSlow), location=location.abovebar, color=color.red, style=shape.triangledown, size=size.small, title="Short")

